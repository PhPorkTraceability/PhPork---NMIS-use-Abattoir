<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/pigLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pigLabel"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:includeFontPadding="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pLabel"
        android:layout_toEndOf="@+id/pLabel" />

    <TextView
        android:id="@+id/pigBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/breed"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:includeFontPadding="true"
        android:layout_below="@+id/pLabel"
        android:layout_toRightOf="@+id/pBreed"
        android:layout_toEndOf="@+id/pBreed" />

    <TextView
        android:id="@+id/pigGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:includeFontPadding="true"
        android:layout_above="@+id/pWeekF"
        android:layout_toRightOf="@+id/pGender"
        android:layout_toEndOf="@+id/pGender" />

    <TextView
        android:id="@+id/pigWeekF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_farrowed"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:includeFontPadding="true"
        android:layout_below="@+id/pigGender"
        android:layout_toRightOf="@+id/fDate"
        android:layout_toEndOf="@+id/fDate" />

    <TextView
        android:id="@+id/pigDateF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/farrowing_date"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:includeFontPadding="true"
        android:layout_below="@+id/pigWeekF"
        android:layout_toRightOf="@+id/fDate"
        android:layout_toEndOf="@+id/fDate" />

    <TextView
        android:id="@+id/pLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:padding="5dp"
        android:includeFontPadding="true"
        android:text="@string/pig_label" />

    <TextView
        android:id="@+id/pBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:layout_below="@+id/pLabel"
        android:textSize="20sp"
        android:includeFontPadding="true"
        android:text="@string/pBreed" />

    <TextView
        android:id="@+id/pGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pigBreed"
        android:padding="5dp"
        android:textSize="20sp"
        android:includeFontPadding="true"
        android:text="@string/pGender" />

    <TextView
        android:id="@+id/pWeekF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pGender"
        android:padding="5dp"
        android:textSize="20sp"
        android:includeFontPadding="true"
        android:text="@string/pWeek_farrowed" />

    <TextView
        android:id="@+id/fDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pWeekF"
        android:textSize="20sp"
        android:padding="5dp"
        android:includeFontPadding="true"
        android:text="@string/pFarrowing_date" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rfid_tag"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_below="@+id/fDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/pRFIDtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="@string/pRfid_tag"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>